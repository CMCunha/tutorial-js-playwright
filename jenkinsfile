pipeline {
  agent { 
    docker { 
      image 'mcr.microsoft.com/playwright:v1.23.0-focal'
    } 
  }
  stages {
    stage('install playwright') {
      steps {
        sh '''
          npm i -D @playwright/test
          npx playwright install
        '''
      }
    }
    stage('help') {
      steps {
        sh 'npx playwright test --help'
      }
    }
    stage('test') {
      steps {
        sh '''
          PLAYWRIGHT_JUNIT_OUTPUT_NAME=junit.xml npx playwright test
        '''
      }
    stage('Import results to Xray') {
      steps {
        step([$class: 'XrayImportBuilder', endpointName: '/junit', importFilePath: 'xray-report.xml', importToSameExecution: 'true', projectKey: 'EWB', serverInstance: '3bd01273-d481-46d1-8826-b862eff38bcb'])
      }
    }
      post {
        success {
          archiveArtifacts(artifacts: 'xray-report.xml', followSymlinks: false)
        }
      }
    }
  }
}